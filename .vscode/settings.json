{
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.autoIndent": "advanced",
    "prettier.useTabs": false,
    "prettier.tabWidth": 4,
    "[php]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "vscode.php-language-features",
        "editor.formatOnSave": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/wp-includes": true
    }
}
